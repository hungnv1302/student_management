<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.controller.auth.LoginController"
           style="-fx-background-color: #F8F8F8;">

    <!-- Split layout: Left banner + Right login -->
    <HBox prefWidth="1200.0" prefHeight="700.0">

        <!-- LEFT -->
        <VBox prefWidth="480.0"
              alignment="CENTER"
              style="-fx-background-color: #004D40;">
            <children>
                <ImageView fitHeight="230.0" fitWidth="280.0" preserveRatio="true">
                    <image>
                        <Image url="@/image/username.png" />
                    </image>
                </ImageView>

                <Label text="HỆ THỐNG QUẢN LÝ SINH VIÊN" textFill="WHITE" wrapText="true"
                       maxWidth="380.0"
                       style="-fx-alignment: center;">
                    <font>
                        <Font name="System Bold" size="26.0"/>
                    </font>
                </Label>
            </children>
        </VBox>

        <!-- RIGHT (grow + center card) -->
        <StackPane HBox.hgrow="ALWAYS" style="-fx-padding: 40;">
            <children>

                <!-- Card -->
                <VBox maxWidth="520.0"
                      prefWidth="520.0"
                      alignment="CENTER"
                      spacing="18"
                      style="-fx-background-color: WHITE;
                             -fx-padding: 36 44 34 44;
                             -fx-background-radius: 14;
                             -fx-border-radius: 14;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 18, 0.25, 0, 0);">

                    <Label text="Đăng nhập Hệ thống" textFill="#004D40">
                        <font>
                            <Font name="System Bold" size="30.0"/>
                        </font>
                    </Label>

                    <!-- Username row -->
                    <HBox alignment="CENTER_LEFT" spacing="12" maxWidth="Infinity">
                        <ImageView fitHeight="34.0" fitWidth="34.0" preserveRatio="true">
                            <image>
                                <Image url="@/image/user_icon.png"/>
                            </image>
                        </ImageView>

                        <TextField fx:id="usernameField"
                                   promptText="Tài khoản"
                                   HBox.hgrow="ALWAYS"
                                   style="-fx-background-color: #F8F8F8;
                                          -fx-border-color: #CCCCCC;
                                          -fx-border-radius: 8;
                                          -fx-background-radius: 8;
                                          -fx-padding: 10 12;"/>
                    </HBox>

                    <!-- Password row -->
                    <HBox alignment="CENTER_LEFT" spacing="12" maxWidth="Infinity">
                        <ImageView fitHeight="34.0" fitWidth="34.0" preserveRatio="true">
                            <image>
                                <Image url="@/image/security_pic.png"/>
                            </image>
                        </ImageView>

                        <PasswordField fx:id="passwordField"
                                       promptText="Mật khẩu"
                                       HBox.hgrow="ALWAYS"
                                       style="-fx-background-color: #F8F8F8;
                                              -fx-border-color: #CCCCCC;
                                              -fx-border-radius: 8;
                                              -fx-background-radius: 8;
                                              -fx-padding: 10 12;"/>
                    </HBox>

                    <Button fx:id="loginButton"
                            text="ĐĂNG NHẬP"
                            onAction="#loginHandle"
                            maxWidth="Infinity"
                            prefHeight="46.0"
                            style="-fx-background-color: #00796B;
                                   -fx-font-weight: bold;
                                   -fx-font-size: 16;
                                   -fx-text-fill: WHITE;
                                   -fx-background-radius: 10;"/>

                    <Hyperlink text="Quên mật khẩu?"
                               style="-fx-text-fill: #00796B;"/>

                </VBox>
            </children>
        </StackPane>

    </HBox>
</StackPane>
