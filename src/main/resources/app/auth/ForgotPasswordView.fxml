<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@/css/auth/forgot-password.css"
      fx:controller="org.example.controller.auth.ForgotPasswordController"
      style="-fx-background-color: #F0F2F5; -fx-padding: 40;">

    <VBox spacing="8" alignment="CENTER">
        <Label text="QUÊN MẬT KHẨU"
               style="-fx-font-size: 26; -fx-font-weight: 900; -fx-text-fill: #1A202C; -fx-font-family: 'Segoe UI';" />
        <Label fx:id="lblInfo" text="Vui lòng nhập Username để nhận mã xác thực qua Email."
               style="-fx-text-fill: #718096; -fx-font-size: 13;" />
    </VBox>

    <VBox spacing="20" maxWidth="450"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15;
                 -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <GridPane hgap="15" vgap="18">
            <columnConstraints>
                <ColumnConstraints minWidth="120" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Username" style="-fx-font-weight: bold; -fx-text-fill: #4A5568;" GridPane.rowIndex="0" />
            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <TextField fx:id="tfUsername" promptText="Nhập tên đăng nhập..."
                           style="-fx-background-radius: 8; -fx-padding: 10; -fx-border-color: #E2E8F0; -fx-border-radius: 8; -fx-background-color: #F8FAFC;"/>
            </VBox>

            <Label text="Mã xác thực" style="-fx-font-weight: bold; -fx-text-fill: #4A5568;" GridPane.rowIndex="1" />
            <HBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <TextField fx:id="tfOtp" promptText="6 chữ số" prefWidth="100"
                           style="-fx-background-radius: 8; -fx-padding: 10; -fx-border-color: #E2E8F0; -fx-border-radius: 8;"/>
                <Button onAction="#sendOtpHandle" text="Gửi mã OTP"
                        style="-fx-background-color: #00897B; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 8 15;"/>
            </HBox>

            <Label text="Mật khẩu mới" style="-fx-font-weight: bold; -fx-text-fill: #4A5568;" GridPane.rowIndex="2" />
            <PasswordField fx:id="pfNew" promptText="Ít nhất 6 ký tự"
                           style="-fx-background-radius: 8; -fx-padding: 10; -fx-border-color: #E2E8F0; -fx-border-radius: 8;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Xác nhận lại" style="-fx-font-weight: bold; -fx-text-fill: #4A5568;" GridPane.rowIndex="3" />
            <PasswordField fx:id="pfConfirm" promptText="Nhập lại mật khẩu"
                           style="-fx-background-radius: 8; -fx-padding: 10; -fx-border-color: #E2E8F0; -fx-border-radius: 8;" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </GridPane>

        <Separator style="-fx-opacity: 0.5;" />

        <VBox spacing="12">
            <Button onAction="#confirmHandle" maxWidth="Infinity" text="CẬP NHẬT MẬT KHẨU"
                    style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 12; -fx-background-radius: 8; -fx-cursor: hand;"/>

            <Hyperlink onAction="#backToLoginHandle" text="Quay lại đăng nhập" alignment="CENTER" maxWidth="Infinity"
                       style="-fx-text-fill: #64748B; -fx-underline: false; -fx-font-size: 13;"/>
        </VBox>

        <Label fx:id="lblError" alignment="CENTER" maxWidth="Infinity" style="-fx-text-fill: #E53E3E; -fx-font-size: 12;" />
    </VBox>
</VBox>