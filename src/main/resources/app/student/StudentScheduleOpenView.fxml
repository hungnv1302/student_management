<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="14"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.student.StudentScheduleOpenController"
      style="-fx-padding: 14; -fx-background-color: #F6F8FA;">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12"
          style="-fx-padding: 10 12; -fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #E5E7EB; -fx-border-radius: 12;">
        <Label text="THỜI KHÓA BIỂU TẠM THỜI"
               style="-fx-font-size: 22; -fx-font-weight: 800; -fx-text-fill: #0F766E;" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="termLabel" text="Kỳ tiếp theo: ?"
               style="-fx-padding: 6 12; -fx-background-color: #E6FFFA; -fx-background-radius: 999;
                      -fx-text-fill: #115E59; -fx-font-weight: 700;" />
    </HBox>

    <Label text="Lịch học trong tuần (4 ca/ngày: 1–3, 4–6, 7–9, 10–12)."
           style="-fx-text-fill: #475569; -fx-padding: 0 2;" />

    <!-- Grid wrapper -->
    <VBox style="-fx-padding: 12; -fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #E5E7EB; -fx-border-radius: 12;"
          VBox.vgrow="ALWAYS">

        <GridPane fx:id="timetableGrid" VBox.vgrow="ALWAYS"
                  hgap="10" vgap="10"
                  style="-fx-background-color: transparent;">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" prefWidth="170" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="12.5" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="12.5" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="12.5" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="12.5" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="12.5" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="12.5" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="12.5" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints prefHeight="44" vgrow="NEVER" />
                <RowConstraints prefHeight="120" vgrow="ALWAYS" />
                <RowConstraints prefHeight="120" vgrow="ALWAYS" />
                <RowConstraints prefHeight="120" vgrow="ALWAYS" />
                <RowConstraints prefHeight="120" vgrow="ALWAYS" />
            </rowConstraints>
        </GridPane>
    </VBox>

</VBox>
