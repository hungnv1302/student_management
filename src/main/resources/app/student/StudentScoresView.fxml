<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.student.StudentScoresController"
      style="-fx-padding: 10;">

    <Label text="KẾT QUẢ HỌC TẬP"
           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #004D40;" />

    <Label fx:id="subTitleLabel"
           text="Điểm theo từng kỳ."
           style="-fx-font-size: 14;" />

    <Accordion fx:id="termAccordion" />

    <!-- FORM PHÚC TRA (ẩn mặc định) -->
    <VBox fx:id="reviewFormArea"
          spacing="10"
          style="-fx-padding: 16; -fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 10; -fx-background-radius: 10;"
          visible="false" managed="false">

        <Label text="PHÚC TRA ĐIỂM"
               style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #004D40;" />

        <Label fx:id="reviewInfoLabel"
               text="(Thông tin lớp/môn sẽ hiện ở đây)"
               style="-fx-font-size: 13;" />

        <Label text="Lý do phúc tra (bắt buộc):" />
        <TextArea fx:id="reasonTextArea"
                  promptText="Nhập lý do phúc tra..."
                  wrapText="true"
                  prefRowCount="5" />

        <HBox spacing="10">
            <Button fx:id="submitReviewButton"
                    text="Gửi yêu cầu"
                    onAction="#submitReviewHandle"
                    style="-fx-background-color: #00796B; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
            <Button fx:id="cancelReviewButton"
                    text="Hủy"
                    onAction="#cancelReviewHandle"
                    style="-fx-background-color: #B0BEC5; -fx-cursor: hand;" />
        </HBox>
    </VBox>

    <!-- BOTTOM: CPA + GPA theo kỳ -->
    <HBox spacing="18" style="-fx-padding: 10 0 0 0;">
        <Label text="CPA:" style="-fx-font-size: 14; -fx-font-weight: bold;" />
        <Label fx:id="cpaValueLabel" text="--"
               style="-fx-font-size: 14; -fx-text-fill: #004D40;"/>

        <HBox HBox.hgrow="ALWAYS" />

        <Label text="Chọn kỳ:" style="-fx-font-size: 14; -fx-font-weight: bold;" />
        <ComboBox fx:id="termComboBox" prefWidth="120" promptText="Kỳ..." />

        <Label text="GPA:" style="-fx-font-size: 14; -fx-font-weight: bold;" />
        <Label fx:id="gpaValueLabel" text="--"
               style="-fx-font-size: 14; -fx-text-fill: #004D40;"/>
    </HBox>

</VBox>
