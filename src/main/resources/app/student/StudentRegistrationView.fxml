<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="740.0" spacing="16"
      styleClass="page-root"
      stylesheets="@/css/student/student-ui.css"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.student.StudentRegistrationController">

    <children>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="12">
            <Label text="Đăng ký Học phần" styleClass="page-title"/>

            <Region HBox.hgrow="ALWAYS"/>

            <HBox alignment="CENTER_RIGHT" styleClass="search-bar">
                <TextField fx:id="searchField" promptText="Mã hoặc Tên Môn" styleClass="input search-field"/>
                <Button fx:id="searchButton" onAction="#searchHandle" text="Tìm kiếm" styleClass="btn-primary"/>
            </HBox>
        </HBox>

        <!-- Open classes -->
        <VBox spacing="10" styleClass="card">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Lớp Học phần mở đăng ký" styleClass="card-title"/>
            </HBox>

            <TableView fx:id="openClassesTable" prefHeight="240.0">
                <columns>
                    <TableColumn fx:id="colOpenSubjectCode" prefWidth="90.0"  text="Mã Môn"/>
                    <TableColumn fx:id="colOpenSubjectName" prefWidth="210.0" text="Tên Môn"/>
                    <TableColumn fx:id="colOpenClassCode"   prefWidth="90.0"  text="Mã Lớp"/>
                    <TableColumn fx:id="colOpenCredits"     prefWidth="70.0"  text="Số TC"/>
                    <TableColumn fx:id="colOpenLecturer"    prefWidth="140.0" text="Giảng viên"/>
                    <TableColumn fx:id="colOpenDay"         prefWidth="70.0"  text="Thứ"/>
                    <TableColumn fx:id="colOpenSlot"        prefWidth="120.0" text="Ca học"/>
                    <TableColumn fx:id="colOpenRoom"        prefWidth="90.0"  text="Phòng"/>
                    <TableColumn fx:id="colOpenAction"      prefWidth="90.0"  text="Thao tác"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Enrolled -->
        <VBox spacing="10" styleClass="card">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Lớp đã đăng ký" styleClass="card-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="totalCreditsLabel" text="Tổng số tín chỉ: 0/24" styleClass="pill"/>
            </HBox>

            <TableView fx:id="enrolledTable" prefHeight="180.0">
                <columns>
                    <TableColumn fx:id="colEnrolledSelect" prefWidth="55.0" text="Chọn"/>
                    <TableColumn fx:id="colEnrolledClassCode" prefWidth="100.0" text="Mã Lớp"/>
                    <TableColumn fx:id="colEnrolledSubject"   prefWidth="250.0" text="Tên Môn"/>
                    <TableColumn fx:id="colEnrolledTime"      prefWidth="150.0" text="Thời gian"/>
                    <TableColumn fx:id="colEnrolledStatus"    prefWidth="120.0" text="Trạng thái"/>
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="cancelRegistrationButton"
                        onAction="#cancelRegistrationHandle"
                        text="Hủy đăng ký"
                        styleClass="btn-danger"/>
            </HBox>
        </VBox>

    </children>
</VBox>
