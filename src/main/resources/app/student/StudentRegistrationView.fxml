<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="740.0" spacing="25.0" style="-fx-padding: 0;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.student.StudentRegistrationController">

    <children>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Đăng ký Học phần" />

            <HBox HBox.hgrow="ALWAYS" />

            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <TextField fx:id="searchField" prefWidth="150.0" promptText="Mã hoặc Tên Môn" />
                <Button fx:id="searchButton" onAction="#searchHandle" style="-fx-background-color: #4CAF50; -fx-text-fill: WHITE; -fx-background-radius: 5;" text="Tìm kiếm" />
            </HBox>
        </HBox>

        <!-- Open classes -->
        <VBox spacing="10.0" style="-fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0; -fx-padding: 0 0 15 0;">
            <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #004D40;" text="Lớp Học phần mở đăng ký" />

            <TableView fx:id="openClassesTable" prefHeight="200.0" style="-fx-border-color: #CCCCCC;">
                <columns>
                    <TableColumn fx:id="colOpenSubjectCode" prefWidth="100.0" text="Mã Môn" />
                    <TableColumn fx:id="colOpenSubjectName" prefWidth="200.0" text="Tên Môn" />
                    <TableColumn fx:id="colOpenClassCode" prefWidth="90.0" text="Mã Lớp" />
                    <TableColumn fx:id="colOpenCredits" prefWidth="80.0" text="Số TC" />
                    <TableColumn fx:id="colOpenLecturer" prefWidth="150.0" text="Giảng viên" />
                    <TableColumn fx:id="colOpenAction" prefWidth="100.0" text="Thao tác" />
                </columns>
            </TableView>
        </VBox>

        <!-- Enrolled -->
        <VBox spacing="10.0">
            <!-- Title row + total credits -->
            <HBox alignment="CENTER_LEFT">
                <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #004D40;"
                       text="Lớp đã đăng ký" />

                <HBox HBox.hgrow="ALWAYS" />

                <Label fx:id="totalCreditsLabel"
                       style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #333333;"
                       text="Tổng số tín chỉ: 0/24" />
            </HBox>

            <TableView fx:id="enrolledTable" prefHeight="150.0" style="-fx-border-color: #CCCCCC;">
                <columns>
                    <!-- ✅ Cột checkbox -->
                    <TableColumn fx:id="colEnrolledSelect" prefWidth="55.0" text="Chọn" />
                    <TableColumn fx:id="colEnrolledClassCode" prefWidth="100.0" text="Mã Lớp" />
                    <TableColumn fx:id="colEnrolledSubject"   prefWidth="250.0" text="Tên Môn" />
                    <TableColumn fx:id="colEnrolledTime"      prefWidth="150.0" text="Thời gian" />
                    <TableColumn fx:id="colEnrolledStatus"    prefWidth="100.0" text="Trạng thái" />
                </columns>
            </TableView>

            <!-- ✅ Nút hủy ở dưới -->
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Button fx:id="cancelRegistrationButton"
                        onAction="#cancelRegistrationHandle"
                        style="-fx-background-color: #D32F2F; -fx-text-fill: WHITE; -fx-background-radius: 5;"
                        text="Hủy đăng ký" />
            </HBox>
        </VBox>

    </children>
</VBox>
