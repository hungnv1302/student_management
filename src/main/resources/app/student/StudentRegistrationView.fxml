<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="740.0" spacing="25.0" style="-fx-padding: 0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Đăng ký Học phần" />

        <VBox spacing="10.0" style="-fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0; -fx-padding: 0 0 15 0;">
            <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #004D40;" text="Lớp Học phần mở đăng ký" />
            <TableView prefHeight="200.0" style="-fx-border-color: #CCCCCC;"> <columns>
                <TableColumn prefWidth="100.0" text="Mã Môn" />
                <TableColumn prefWidth="200.0" text="Tên Môn" />
                <TableColumn prefWidth="80.0" text="Số TC" />
                <TableColumn prefWidth="150.0" text="Giảng viên" />
                <TableColumn prefWidth="100.0" text="Thao tác" />
            </columns>
            </TableView>
        </VBox>

        <VBox spacing="10.0">
            <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #004D40;" text="Lớp đã đăng ký" />
            <TableView prefHeight="150.0" style="-fx-border-color: #CCCCCC;">
                <columns>
                    <TableColumn prefWidth="100.0" text="Mã Lớp" />
                    <TableColumn prefWidth="250.0" text="Tên Môn" />
                    <TableColumn prefWidth="150.0" text="Thời gian" />
                    <TableColumn prefWidth="100.0" text="Trạng thái" />
                    <TableColumn prefWidth="100.0" text="Thao tác" />
                </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT">
                <Button fx:id="cancelRegistrationButton" onAction="#cancelRegistrationHandle" style="-fx-background-color: #D32F2F; -fx-text-fill: WHITE; -fx-background-radius: 5;" text="Hủy Đăng ký" />
            </HBox>
        </VBox>

    </children>
</VBox>