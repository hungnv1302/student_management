<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="520.0" prefWidth="820.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.lecturer.LecturerDashboardController">

    <children>
        <Label layoutX="300" layoutY="25" text="LECTURER DASHBOARD"/>

        <!-- Quản lí hồ sơ -->
        <Label layoutX="60" layoutY="80" text="Quản lí hồ sơ"/>
        <Button layoutX="60" layoutY="115" prefWidth="260" text="Xem hồ sơ cá nhân" onAction="#handleViewProfile"/>
        <Button layoutX="60" layoutY="155" prefWidth="260" text="Cập nhật hồ sơ cá nhân" onAction="#handleUpdateProfile"/>

        <!-- Quản lí lớp học phần -->
        <Label layoutX="380" layoutY="80" text="Quản lí lớp học phần"/>
        <Button layoutX="380" layoutY="115" prefWidth="280" text="Xem lịch dạy" onAction="#handleViewTeachingSchedule"/>
        <Button layoutX="380" layoutY="155" prefWidth="280" text="Xem danh sách phân công dạy" onAction="#handleViewAssignments"/>
        <Button layoutX="380" layoutY="195" prefWidth="280" text="Xem danh sách lớp" onAction="#handleViewClassList"/>

        <!-- Quản lí điểm số -->
        <Label layoutX="60" layoutY="260" text="Quản lí điểm số"/>
        <Button layoutX="60" layoutY="295" prefWidth="260" text="Nhập điểm" onAction="#handleEnterGrades"/>
        <Button layoutX="60" layoutY="335" prefWidth="260" text="Cập nhật điểm" onAction="#handleUpdateGrades"/>
        <Button layoutX="60" layoutY="375" prefWidth="260" text="Chốt điểm" onAction="#handleFinalizeGrades"/>
    </children>
</AnchorPane>
