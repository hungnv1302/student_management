<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="14"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.lecturer.LecturerTimetableController"
      style="-fx-padding: 18; -fx-background-color: #F4F7F7;">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="THỜI KHÓA BIỂU"
               style="-fx-font-size: 26; -fx-font-weight: 800; -fx-text-fill: #0E6B5A;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="termPill" text="Kỳ: --"
               style="-fx-background-color: #E8FFF7; -fx-text-fill: #0E6B5A;
                      -fx-padding: 6 12; -fx-background-radius: 20; -fx-font-weight: 700;"/>
        <Button text="Tải lại" onAction="#reload"/>
    </HBox>

    <Label text="Lịch dạy trong tuần (4 ca/ngày)."
           style="-fx-text-fill: #6B7280; -fx-font-size: 13;"/>

    <GridPane fx:id="grid"
              VBox.vgrow="ALWAYS"
              hgap="14" vgap="14"
              style="-fx-padding: 14;
                 -fx-background-color: white;
                 -fx-background-radius: 18;">
    </GridPane>


</VBox>
