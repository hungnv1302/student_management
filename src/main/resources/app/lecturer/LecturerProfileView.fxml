<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="20.0" style="-fx-padding: 0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="HỒ SƠ CÁ NHÂN GIẢNG VIÊN" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #004D40;" />

    <GridPane hgap="20.0" vgap="15.0">
        <columnConstraints>
            <javafx.scene.layout.ColumnConstraints minWidth="100.0" prefWidth="150.0" />
            <javafx.scene.layout.ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="300.0" />
        </columnConstraints>

        <Label text="Mã Giảng viên:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField text="GV12345" editable="false" style="-fx-background-color: #F0F0F0;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Họ và Tên:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField promptText="Nhập họ tên" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField promptText="Nhập email" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Điện thoại:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField promptText="Nhập SĐT" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    </GridPane>

    <HBox alignment="CENTER_RIGHT">
        <Button text="Cập nhật Hồ sơ" style="-fx-background-color: #00796B; -fx-text-fill: WHITE; -fx-background-radius: 5; -fx-font-weight: bold;" />
    </HBox>
</VBox>