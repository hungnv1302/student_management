<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15.0" style="-fx-padding: 25; -fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.lecturer.LecturerProfileController">

    <Label text="THÔNG TIN CÁ NHÂN GIẢNG VIÊN" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <GridPane hgap="15.0" vgap="12.0" style="-fx-border-color: #ecf0f1; -fx-border-width: 0 0 1 0; -fx-padding: 0 0 15 0;">
        <columnConstraints>
            <ColumnConstraints minWidth="120.0" prefWidth="130.0" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Mã Giảng viên:" GridPane.rowIndex="0" />
        <Label fx:id="lblLecturerId" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Họ và Tên:" GridPane.rowIndex="1" />
        <Label fx:id="lblFullName" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Ngày sinh:" GridPane.rowIndex="2" />
        <Label fx:id="lblDob" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Giới tính:" GridPane.rowIndex="3" />
        <Label fx:id="lblGender" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Khoa:" GridPane.rowIndex="4" />
        <Label fx:id="lblDepartment" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Học vị:" GridPane.rowIndex="5" />
        <Label fx:id="lblDegree" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="Chức vụ:" GridPane.rowIndex="6" />
        <Label fx:id="lblPosition" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    </GridPane>

    <Label text="THÔNG TIN LIÊN HỆ (CÓ THỂ CHỈNH SỬA)" style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-padding: 10 0 0 0;" />

    <GridPane hgap="15.0" vgap="12.0">
        <columnConstraints>
            <ColumnConstraints minWidth="120.0" prefWidth="130.0" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Số điện thoại:" GridPane.rowIndex="0" />
        <TextField fx:id="tfPhone" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Email cá nhân:" GridPane.rowIndex="1" />
        <TextField fx:id="tfEmail" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Địa chỉ:" GridPane.rowIndex="2" />
        <TextArea fx:id="taAddress" prefHeight="60.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    </GridPane>

    <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button text="Lưu Thay Đổi" onAction="#saveHandle"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20; -fx-cursor: hand;" />
    </HBox>
</VBox>